@model IEnumerable<ToDoList.Models.ToDo>

@{
  ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
<div id="tableDiv"></div>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Description)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Date)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Done)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @if (item.Done)
        {
          @Html.DisplayFor(modelItem => item.Description)
        }
        else
        {
          <div class="CompletedToDo">@Html.DisplayFor(modelItem => item.Description)</div>
        }

      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Date)
      </td>
      <td>
        @Html.CheckBoxFor(modelItem => item.Done, new { id = item.Id, @class = "ActiveCheck" })
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
      </td>
    </tr>
  }

</table>

@section Scripts {
  <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>>
  <script src="~/Customes/AddCheckBox.js"></script>
  <script src="~/Customes/AddCheckBox.js"</script>

}
